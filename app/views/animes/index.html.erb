<div class="fade_index"></div>
<%= render "shared/header" %>
<div class="index-content scale-down">
  <% @anime.sort_by{ |k | k['title'] }.each do |element|%>
    <div class="anime-card" data-anime-id="<%=element.id%>">
      <h2> <%= element.title %> </h2>
      <div class="card-zoom">
        <% if element.photo.attached? %>
          <%= cl_image_tag element.photo.key, height: 300, width: 500, crop: :fill, class: "card-illustration" %>
        <% else %>
          <img src="<%=element.image_url%>" alt=<%="#{element.title} Illustration picture"%> class="card-illustration">
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<h2 id="first-letter"><%= @anime[0].title[0] %></h2>
