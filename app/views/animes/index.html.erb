<div data-controller='index-fade-in horizontal-scroll index-fade-out' id='index-container'>
  <div id='fade-out-show-1' class='fade-out-show no-display' data-index-fade-out-target='panel1'></div>
  <div id='fade-out-show-2' class='fade-out-show no-display' data-index-fade-out-target='panel2'></div>
  <div class="fade_index"></div>
  <%= render "shared/header" %>
  <div class="index-content scale-down" data-index-fade-in-target='animeList'  data-index-fade-out-target='animeList' data-horizontal-scroll-target='animeList'>
    <% @anime.each do |element|%>
      <div class="anime-card" data-anime-id="<%=element.id%>" data-index-fade-in-target='animeCard' data-index-fade-out-target='animeCard'>
        <h2> <%= element.title %> </h2>
        <div class="card-zoom">
          <% if element.picture.attached? %>
            <%= cl_image_tag element.picture.key, height: 300, width: 500, crop: :fill, class: "card-illustration" %>
          <% else %>
            <img src="<%=element.image_url%>" alt=<%="#{element.title} Illustration picture"%> class="card-illustration">
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <h2 id="first-letter" data-horizontal-scroll-target='firstLetter'><%= @anime[0].title[0] %></h2>
  <% if !current_user.present? %>
    <%= link_to "/users/sign_in" do %>
      <h2 class="btn-connect">Connection</h2>
    <% end %>
  <% end %>

  <%# <a href="/users/sign_in"><h2 class="btn-connect">Connection</h2></a> %>
</div>
