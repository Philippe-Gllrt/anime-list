  <%= form_with url: '/animes', method: :post, data: { controller: 'anime-form', anime_form_target: 'form' } do |f| %>
  <!-- steps -->
  <div class="step-container" data-anime-form-target="formTargets">
    <%= f.label :title do %>
      <h2>Title</h2>
    <% end %>
    <%= f.text_field :title, class: 'form-inputs', placeholder: 'Naruto' %>
  </div>

  <div class="step-container" data-anime-form-target="formTargets">
    <%= f.label :synopsis do %>
      <h2>Synopsis</h2>
    <% end %>
    <%= f.text_area :synopsis, class: 'form-inputs text-input' %>
  </div>

  <div class="step-container" data-anime-form-target="formTargets">
    <%= f.label :season do %>
      <h2>Seasons</h2>
    <% end %>
    <%= f.text_field :season, class: 'form-inputs', placeholder: '6' %>
  </div>

  <div class="step-container" data-anime-form-target="formTargets">
    <%= f.label :rate_animation do %>
      <h2>Rate Animation</h2>
    <% end %>
    <%= f.text_field :rate_animation, class: 'form-inputs', placeholder: '4.2' %>
  </div>

  <div class="step-container" data-anime-form-target="formTargets">
    <%= f.label :rate_synopsis do %>
      <h2>Rate Synopsis</h2>
    <% end %>
    <%= f.text_field :rate_synopsis, class: 'form-inputs', placeholder: '4.5' %>
  </div>

  <div class="step-container" data-anime-form-target="formTargets">
    <%= f.label :picture do %>
      <h2>Picture</h2>
    <% end %>
    <%= f.file_field :picture, id: 'picture', class: 'form-inputs' %>
  </div>

  <div class="form-buttons">
    <div class='form-button' data-action="click->anime-form#previousStep"><i class="fa-solid fa-chevron-left"></i></div>
    <div class='form-button' data-action="click->anime-form#nextStep"><i class="fa-solid fa-chevron-right"></i></div>
  </div>
  <%= f.submit 'Submit' %>
<% end %>




